<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAuto1"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/celysee"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MARCA: CITROEN"
            android:layout_gravity="center"
            android:id="@+id/txtMarca"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MODELO: C-elysee"
            android:layout_gravity="center"
            android:id="@+id/txtModelo"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Motor: 1.6HDI con 92hp"
            android:layout_gravity="center"
            android:id="@+id/txtMotor"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Transmision: manual 5 velocidades"
            android:layout_gravity="center"
            android:id="@+id/txtTransmision"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</FrameLayout>